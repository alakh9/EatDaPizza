<h1>Eat Da Pizza</h1>

<h3>Eat the Pizza that is displayed or add your own</h3>

<ul>
  {{#each pizzas }}
  	<li>
  	   <p>ID: {{id}}</p>
       <p>Pizza: {{pizza_name}}</p>
  	</li>
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="pizza_name"></textarea>

	<button type="submit">Submit</button>
</form>
